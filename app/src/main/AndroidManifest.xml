<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.myapplication">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:xlargeScreens="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_name"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ManageActivity"
            android:label="@string/manage_name"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:label="@string/user_manage"
            android:name=".UserActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:label="@string/client_basic"
            android:name=".ClientActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:label="@string/product_basic"
            android:name=".ProductActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:label="@string/inventory_basic"
            android:name=".InventoryActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ViewActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:label="@string/client_basic_select"
            android:name=".ClientSelector"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:label="@string/product_basic_select"
            android:name=".ProductSelector"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:label="@string/inventory_in"
            android:name=".InventoryIn"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>