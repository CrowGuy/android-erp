<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:columnCount="5"
    android:rowCount="4"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/titleInventoryNo"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="庫存編號" />

    <TextView
        android:id="@+id/valueInventoryNo"
        android:layout_columnWeight="3"
        android:layout_rowWeight="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="庫存編號" />

    <Button
        android:id="@+id/btnView"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:text="檢視"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/titleClientName"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="客戶名稱" />

    <Spinner
        android:id="@+id/spinnerClientName"
        android:layout_columnWeight="3"
        android:layout_rowWeight="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:padding="5dp" />

    <TextView
        android:id="@+id/titleProductName"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="品項名稱" />

    <Spinner
        android:id="@+id/spinnerProductName"
        android:layout_columnWeight="3"
        android:layout_rowWeight="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:padding="5dp" />

    <Button
        android:id="@+id/btnInsert"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:text="新增"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/titleColor"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:textSize="30sp"
        android:text="顏色名稱" />

    <EditText
        android:id="@+id/valueColor"
        android:layout_columnWeight="3"
        android:layout_rowWeight="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:textSize="30sp"/>

</GridLayout>